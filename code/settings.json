{
  /************

  Layout

  ************/

  "window.zoomLevel": 0,
  "editor.fontSize": 13,
  "editor.fontFamily": "Fira Code, monospace",
  "editor.fontLigatures": true,

  // Rulers
  "editor.renderLineHighlight": "all",
  "editor.rulers": [80],

  // Hide tabs, minimap, overview, rulers, and activity bar
  "workbench.statusBar.visible": false,
  "workbench.editor.showTabs": false,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.overviewRulerLanes": 1,
  "editor.renderIndentGuides": false,
  "workbench.activityBar.visible": false,

  "explorer.confirmDragAndDrop": false,
  "editor.scrollBeyondLastLine": false,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#aaaaaa22",
    "editorRuler.foreground": "#aaaaaa22"
  },

  /************

  Tabs & Whitespace

  ************/

  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "rewrap.autoWrap.enabled": true,

  /************

  Cursor

  ************/

  "editor.cursorStyle": "underline-thin",
  "editor.cursorBlinking": "phase",
  "terminal.integrated.cursorBlinking": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "underline",
  "vim.cursorStylePerMode.replace": "underline",
  "vim.cursorStylePerMode.visual": "line",
  "vim.cursorStylePerMode.visualblock": "line",
  "vim.cursorStylePerMode.visualline": "line",

  /************

  Diff

  ************/

  "diffEditor.renderSideBySide": false,

  /************

  Vim

  ************/

  "vim.timeout": 250,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": false,
  "vim.insertModeKeyBindings": [{ "before": ["<C-l>"], "after": ["<Esc>"] }],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.navigateEditorGroups"]
    },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["<"], "commands": ["editor.action.outdentLines"] }
  ],

  /************

  Integrated Terminal Settings

  ************/

  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "terminal.integrated.confirmOnExit": true,
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.cursorStyle": "underline",

  /************

  Linting & Formatting

  ************/

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "command": "rubocop",
      "useBundler": false,
      "lint": true,
      "rails": true
    }
  },
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": ["typescript", "typescriptreact"],
  "tslint.enable": false,

  /************

  File-type Specific Settings

  ************/

  "[git-commit]": {
    "editor.rulers": [72, 50],
    "editor.wordWrap": "off"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",

  /************

  Search

  ************/

  "search.exclude": {
    "dist/": true
  },

  /************

  Liveshare

  ************/

  "liveshare.featureSet": "insiders",
  "liveshare.nameTagVisibility": "Always",
  "liveshare.showReadOnlyUsersInEditor": "always",
  "liveshare.anonymousGuestApproval": "reject",
  "liveshare.increasedGuestLimit": false,
  "liveshare.guestApprovalRequired": true,
  "rubyTestExplorer.rspecCommand": "docker-compose exec -e RAILS_ENV=test -e RAKE_END=test app bundle exec rspec",
  "rubyTestExplorer.testFramework": "rspec",
  "rubyTestExplorer.logpanel": true,
  "ruby.specClearTerminal": false,
  "ruby.specCommand": "bin/machina test",
  "ruby.specFocusTerminal": false,
  "ruby.specSaveFile": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "workbench.sideBar.location": "left",
  "git.autofetch": true,
  "liveshare.authenticationProvider": "GitHub",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.inlineSuggest.enabled": true
}
