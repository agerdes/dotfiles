{
  /************

  Layout

  ************/

  "window.zoomLevel": 0,
  "editor.fontSize": 13,
  "editor.fontFamily": "Fira Code, monospace",
  "editor.fontLigatures": true,

  // Rulers
  "editor.renderLineHighlight": "all",
  "editor.rulers": [80],

  // Hide tabs, minimap, overview, rulers, and activity bar
  "workbench.statusBar.visible": false,
  "workbench.editor.showTabs": false,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.overviewRulerLanes": 1,
  "editor.renderIndentGuides": false,
  "workbench.activityBar.visible": false,

  "explorer.confirmDragAndDrop": false,
  "editor.scrollBeyondLastLine": false,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#aaaaaa22",
    "editorRuler.foreground": "#aaaaaa22",
  },


  /************

  Tabs & Whitespace

  ************/

  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "rewrap.autoWrap.enabled": true,


  /************

  Cursor

  ************/

  "editor.cursorStyle": "underline-thin",
  "editor.cursorBlinking": "phase",
  "terminal.integrated.cursorBlinking": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "underline",
  "vim.cursorStylePerMode.replace": "underline",
  "vim.cursorStylePerMode.visual": "line",
  "vim.cursorStylePerMode.visualblock": "line",
  "vim.cursorStylePerMode.visualline": "line",


  /************

  Diff

  ************/

  "diffEditor.renderSideBySide": false,


  /************

  Vim

  ************/

  "vim.timeout": 250,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": false,
  "vim.insertModeKeyBindings": [
    { "before": ["<C-l>"], "after": ["<Esc>"] }
  ],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.navigateEditorGroups"]
    },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
  ],


  /************

  Integrated Terminal Settings

  ************/

  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "terminal.integrated.confirmOnExit": true,
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.rendererType": "dom",


  /************

  Linting

  ************/

  "editor.formatOnPaste": true,
  "prettier.tslintIntegration": true,


  /************

  File-type Specific Settings

  ************/

  "[git-commit]": {
    "editor.rulers": [72, 50],
    "editor.wordWrap": "off",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",


  /************

  Search

  ************/

  "search.exclude": { "dist/": true },
  "search.location": "panel",


  /************

  Liveshare

  ************/

  "liveshare.featureSet": "insiders",
  "liveshare.nameTagVisibility": "Always",
  "liveshare.showReadOnlyUsersInEditor": "always",
  "liveshare.anonymousGuestApproval": "reject",
  "liveshare.increasedGuestLimit": false,
  "liveshare.guestApprovalRequired": true,
}
